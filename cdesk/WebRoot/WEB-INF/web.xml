	<filter>
		<filter-name>ssoFilter</filter-name>
		<filter-class>
			com.channelsoft.ems.sso.filter.SsoFilter
		</filter-class>
		<init-param>
			<param-name>ENT_LOGIN_INDEX</param-name>
			<param-value>/ems/</param-value>
		</init-param>
		<init-param>
			<param-name>SSO_SERVER_URL</param-name>
			<param-value>http://127.0.0.1:8080/ems/sso</param-value>
		</init-param>
		<init-param>
			<param-name>PLATFORM_ID</param-name>
			<param-value>ems</param-value>
		</init-param>
		<init-param>
			<param-name>IGNORE_PRIVILEGE_URL</param-name>

			<param-value>/iosApi/*,/iosCommApi/*,/iosUserApi/*,/androidApi/*,/api/*,/agentApi/*,/wxApi/*,/userApi/*,/static/*,/script/*,/H+3.2/*,/user/*,/CheckCodeServlet,/register/*,/sso/*,/platformConfig/SynchronousData,/login,/logout,/group/getGroupIds,/group/getGroupsByIds,/usrManage/getUsersByIds,/usrManage/userDetails,check/problem/*,/userMongo/*</param-value>

		</init-param>		
	</filter>
	
	<filter-mapping>
		<filter-name>ssoFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>

	<listener>
		<listener-class>com.channelsoft.ems.sso.filter.UserSessionListener</listener-class>
	</listener>
    <listener>
		<listener-class>com.channelsoft.ems.redis.util.EmsInitListener</listener-class>
	</listener>
</web-app>